<%- include("../partials/header") %>
<%- include("../partials/navbar") %>

<style>
    body{
        background-image: url('data:image/jpeg;base64,');
        background-size: cover;
    }
</style>

<div class="container" style="margin-top: 5rem;">
    <%- include("../partials/flash") %>

    <h6 class="display-6">My Wishlist</h6>
  
    <div class="row">
        <div class="col-lg-8">
            <% for(let item of userWishlist) { %>
                <div class="card mb-3" style="width: 90%;">
                    <div class="row g-0">
                        <div class="col-md-4">
                            <img style="width: 200px;" src="<%= item.img %>" alt="...">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title"><%= item.name %></h5>
                                <h6 class="card-text"><%=item.desc %></h6>
                                <p class="card-text">Add to your cart now!</p>
                                <form action="/user/:id/cart" method="post">
                                    <button class="btn btn-sm btn-secondary">Add to Cart</button>
                                </form>
                                <form action="/wishlist/remove/<%= item._id %>" method="post">
                                    <button class="btn btn-sm btn-danger">Remove</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>
