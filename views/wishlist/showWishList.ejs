<%- include("../partials/header")%>
<%- include("../partials/navbar")%>



<style>

    body{
        background-image: url(https://img.freepik.com/free-photo/abstract-orange-background-layout-design-studio-room-web-template-business-report-with-smooth-circle-gradient-color_1258-63962.jpg);
        background-size: cover;
    }


</style>
<div class="container" style="margin-top: 5rem;">
 <%- include("../partials/flash")%>
 <h6 class="display-6">My Wishlist</h6>

<div class="row">
  <div class="col-lg-8">

    <% for (let item of userWishlist) { %>
    <div class="card mb-3" style="width: 90%;">
      <div class="row g-0">
        <div class="col-md-4">
          <img style="width: 200px;" src="<%= item.img %>" alt="...">
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h5 class="card-title"><%= item.name %></h5>
            <p class="card-text">BEST OFFER! BUY NOW!!</p>

            <!-- Add a form to remove from wishlist -->
            <form action="/user/<%= currentUser._id %>/wishlist/remove/<%= item._id %>?_method=DELETE" method="post">
              <button class="btn btn-sm btn-danger">Remove</button>
            </form>
          </div>
        </div>
      </div>
    </div>
    <% } %>

  </div>

  <div class="col-lg-4 mb-3">
    <h6 class="display-6">Wishlist Items</h6>
    <ul class="list-group">

      <% for (let item of userWishlist) { %>
      <li class="list-group-item"><%= item.name %> - <strong>&#8377; <%= item.price %></strong></li>
      <% totalAmount += item.price %>
      <% } %>

    </ul>

    <div class="mt-2">
      <p class="fw-bold">Total Amount : &#8377; <%= totalAmount %></p>
      <a href="/wishlist/payment" class="btn btn-success">Proceed To Pay</a>
    </div>

  </div>

</div>

</div>
<center>

  <h3>Expected Delivery Date</h3>
  <h4 id="p1"></h4>
  <script>
    var date = new Date();
    var current_date = date.getDate() + 5 + "-" + (date.getMonth() + 1) + "-" + date.getFullYear();
    document.getElementById("p1").innerHTML = current_date;
  </script>
</center>



<%- include("../partials/footer")%>